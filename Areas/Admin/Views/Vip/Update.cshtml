@model CP2496H07Group1.Models.Vip

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="mb-4">Update VIP</h2>

    @if (!ViewData.ModelState.IsValid)
    {
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
            <li>@error.ErrorMessage</li>
                }
        </ul>
    </div>
    }

    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="TypeVip" class="form-label">Type VIP</label>
            <input asp-for="TypeVip" class="form-control" type="number" min="1" />
            <span asp-validation-for="TypeVip" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NoPick" class="form-label">Transfer fee</label>
            <select asp-for="NoPick" class="form-control">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="NoPick" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MoneyBack" class="form-label">Monney back</label>
            <input asp-for="MoneyBack" class="form-control" type="number" min="0" />
            <span asp-validation-for="MoneyBack" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Update</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
    </form>
</div>

