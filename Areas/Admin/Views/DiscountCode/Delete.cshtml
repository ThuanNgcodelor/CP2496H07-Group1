@model CP2496H07Group1.Models.DiscountCode

@{
    ViewData["Title"] = "Delete Discount Code";
    Layout = "_Layout";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4 border border-danger">
                <h6 class="mb-4 text-danger">Delete Discount Code</h6>

                <h5 class="mb-4">Are you sure you want to delete this Discount Code?</h5>
                <dl class="row">
                    <dt class="col-sm-2">Discount Code</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.DiscountCodes)</dd>

                    <dt class="col-sm-2">Points</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Points)</dd>

                    <dt class="col-sm-2">Percent</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Percent)</dd>

                    <dt class="col-sm-2">Expiry Date</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.LongDate)</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">No</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
