@model CP2496H07Group1.Models.Faq

@{
    ViewData["Title"] = "Delete FAQ";



    Layout = "_Layout";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4 border border-danger">
                <h6 class="mb-4 text-danger">Delete FAQ</h6>

                <div class="alert alert-warning">
                    <strong>Are you sure you want to delete this FAQ?</strong>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label fw-bold">Question</label>
                    <div class="col-sm-10 pt-2">
                        @Html.DisplayFor(model => model.Question)
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label fw-bold">Answer</label>
                    <div class="col-sm-10 pt-2">
                        @Html.DisplayFor(model => model.Answer)
                    </div>
                </div>

                <div class="row mb-4">
                    <label class="col-sm-2 col-form-label fw-bold">Status</label>
                    <div class="col-sm-10 pt-2">
                        @(Model.IsConfirm ? "Active" : "Inactive")
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-danger me-2">Yes</button>
                            <a asp-action="Index" class="btn btn-secondary">No</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
